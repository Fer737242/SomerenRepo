@model Someren.Models.Student
@{
    ViewData["Title"] = "Create student";
}

<h4>New Student</h4>
<form action="/Students/Create" method="POST">
    <div class="form-group py-2">
        <label for="FirstName">First Name:</label>
        <input type="text" id="FirstName" name="FirstName" class="form-control" required value="@Model?.FirstName" />
    </div>

    <div class="form-group py-2">
        <label for="LastName">Last Name:</label>
        <input type="text" id="LastName" name="LastName" class="form-control" required value="@Model?.LastName" />

    </div>

    <div class="form-group py-2">
        <label for="PhoneN">Phone number:</label>
        <input type="text" id="PhoneN" name="PhoneN" class="form-control" required value="@Model?.PhoneN" />
    </div>
    <div class="form-group py-2">
        <label for="ClassN">Class Name:</label>
        <input type="text" id="ClassN" name="ClassN" class="form-control" required value="@Model?.ClassN" />
    </div>

    <button type="submit" class="btn btn-primary">Add</button>

</form>

<a href="/Students/Index">Back to list</a>